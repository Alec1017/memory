<div class="row">
  <div class="column">
    <h1 id="index-page">Join a Game</h1>
  </div>
</div>
<div class="row">
  <div class="column column-50 column-offset-25">
    <%= form_for @conn, "/join", [as: :join], fn f -> %>
      <h4>Your Name: <%= text_input f, :user %></h4>
      <h4>Game Name: <%= text_input f, :game %></h4>
      <p><%= submit "Join" %>
    <% end %>
  </div>
</div>